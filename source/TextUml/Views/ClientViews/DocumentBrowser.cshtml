<div id="document-browser-dialog" class="modal hide fade">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true" title="close">&times;</button>
    <h3>Open document</h3>
  </div>
  <div class="modal-body">
    <div id="document-list">
      <div class="btn-toolbar">
        <span>Sort: </span>
        <div class="btn-group" data-toggle="buttons-radio">
          <button type="button" class="btn btn-mini" data-sort-attribute="title">Title</button>
          <button type="button" class="btn btn-mini active" data-sort-attribute="updatedAt">Last updated</button>		
        </div>
        <div class="btn-group" data-toggle="buttons-radio">
          <button type="button" class="btn btn-mini" data-sort-order="0">
            <i class="icon-sort-up"></i>
          </button>
          <button type="button" class="btn btn-mini active" data-sort-order="1">
            <i class="icon-sort-down"></i>
          </button>
        </div>
      </div>
      <div class="list-container" tabindex="-1">
        <ul class="unstyled"></ul>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-primary">Open</button>
    <a href="javascript:;" class="btn" data-dismiss="modal">Cancel</a>
  </div>
  <script id="document-item-template" type="text/html">
    <div class="display">
      <span title="Double click to edit">{{title}}</span> 
      <small title="{{lastUpdatedInHumanizeTime()}}">last updated {{lastUpdatedInRelativeTime()}}</small>
    </div>
    <div class="edit">
      <input type="text" value="{{title}}" title="Type your title and hit enter" />
    </div>
    <i class="icon-trash" title="Delete" data-command="delete"></i>
  </script>
</div>