<div id="document-title-dialog" class="modal hide fade">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true" title="close">&times;</button>
    <h3>New document</h3>
  </div>
  <div class="modal-body">
    <div class="form-horizontal">
      <div class="control-group">
        <label class="control-label" for="document-title-input">Title</label>
        <div class="controls">
          <div class="input-prepend">
            <span class="add-on"><i class="icon-file"></i></span>
            <input type="text" id="document-title-input" name="title" />
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-primary">Save</button>
    <a href="javascript:;" class="btn" data-dismiss="modal">Cancel</a>
  </div>
</div>