<div id="document-share-dialog" class="modal hide fade">
  <div class="modal-header">
    <a href="javascript:;" rel="nofollow" class="close" data-dismiss="modal" title="close">&times;</a>
    <h3>Share document</h3>
  </div>
  <div class="modal-body">
    <form action="#" method="post" class="form-inline new-share" novalidate>
      <dl class="dl-horizontal">
        <dt class="header">Can edit</dt>
        <dd class="header">Email</dd>
        <dt>
          <label class="checkbox inline">
            <input type="checkbox" name="canEdit" value="true" />
          </label>
        </dt>
        <dd>
          <div class="control-group">
            <div class="controls">
              <div class="input-prepend">
                <span class="add-on"><i class="icon-envelope"></i></span>
                <input type="email" name="email" placeholder="user email..." />
              </div>
              <button type="submit" class="btn btn-success" title="add">
                <i class="icon-plus"></i>
              </button>
            </div>
          </div>
        </dd>
      </dl>
    </form>
    <div class="share-list"></div>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-primary">Share</button>
    <a href="javascript:;" rel="nofollow" class="btn" data-dismiss="modal">Cancel</a>
  </div>
  <script id="share-item-template" type="text/html">
    <form action="#" method="post" class="form-inline edit-share" novalidate>
      <dl class="dl-horizontal">
        <dt>
          <label class="checkbox inline">
            <input type="checkbox" name="canEdit" value="true" <% if (canEdit) { %> checked <% } %>/>
          </label>
        </dt>
        <dd>
          <div class="control-group">
            <div class="controls">
              <div class="input-prepend">
                <span class="add-on"><i class="icon-envelope"></i></span>
                <input type="email" name="email" placeholder="user email..." value="<%= email %>" />
              </div>
              <button type="submit" class="btn btn-danger" title="remove">
                <i class="icon-minus"></i>
              </button>
            </div>
          </div>
        </dd>
      </dl>
    </form>
  </script>
</div>